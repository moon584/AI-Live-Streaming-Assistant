# 示例环境变量
# 复制此文件为 .env 并填写真实值（.env 已被 .gitignore 忽略）

# Flask
SECRET_KEY=change-me
DEBUG=False

# 数据库（如果使用 docker-compose，DB_HOST 为服务名 db）
DB_HOST=127.0.0.1
DB_USER=root
DB_PASSWORD=your-db-password
DB_NAME=live_assistant
DB_POOL_SIZE=5

# DeepSeek / AI
DEEPSEEK_API_KEY=
DEEPSEEK_API_URL=https://api.deepseek.com/chat/completions
DEEPSEEK_MODEL=deepseek-chat

# 百度 TTS（如果使用）
BAIDU_TTS_API_KEY=
BAIDU_TTS_SECRET_KEY=
BAIDU_TTS_VOICE=1
BAIDU_TTS_FORMAT=wav
BAIDU_TTS_SAMPLE_RATE=24000
BAIDU_TTS_RATE=1.0
